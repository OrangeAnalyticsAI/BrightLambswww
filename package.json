{
  "name": "bright-lambs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p $PORT",
    "render-build": "./render-build.sh",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
