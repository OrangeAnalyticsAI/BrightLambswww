    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/ssr": "^0.6.1",
    "@types/nodemailer": "^6.4.17",
    "autoprefixer": "^10.4.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.18.1",
    "husky": "^9.0.0",
    "lucide-react": "^0.511.0",
    "next": "14.0.4",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.3",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
